<%- include('partials/header.ejs') %>

<main class="book-card-container">
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= book.cover %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
         
          <p class="card-text"><%= book.review %></p>
        
          <div>
            <span class="card-text" >Rating</span>
            <i id="rating" data-id=<%= book.rating %>></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i>
            <i class="fa-regular fa-star"></i></div>
          <p class="card-text"><small class="text-body-secondary">Category: <%= book.category %></small></p>
          <p class="card-text"><small class="text-body-secondary">Openid: <%= book.openid %></small></p>
          <p class="card-text"><small class="text-body-secondary">Publicate: <%= book.year %></small></p>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="/bookscript.js"></script>












<%- include('partials/footer.ejs') %>