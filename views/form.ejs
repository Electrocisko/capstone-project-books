<%- include('partials/header.ejs') %>

    <main class="container w-50 ">
        <h1>Book Form</h1>

        <form class="d-flex justify-content-start flex-column" action="/form" method="post">
            <div class="mb-6">
                <label for="title">Book Title</label>
                <input type="text" class="form-control" id="inputTitle" name="title" required/>
             
                <label for="authorID">Author id </label>
                <input type="text" class="form-control" id="inputAuthorID" name="authorID" required placeholder="register the author first if it is not in the database"/>
                <label for="rating">Rate</label>
                <input type="text" class="form-control" id="inputrating" name="rating" required/>
                <label for="review">Review</label>
                <textarea name="review" rows="5" cols="50" id="inputReview" class="form-control" required>Write something here</textarea>
                <label for="category">Category</label>
                <input type="text" class="form-control" id="inputcategory" name="category" required/>
                <label for="openid">Openid</label>
                <input type="text" class="form-control" id="inputopenid" name="openid" required/>
                <label for="year">Year</label>
                <input type="number" class="form-control" id="inputyear" name="year" required/>
            </div>

            <button type="submit" class="btn btn-danger mt-2 w-25">Enviar</button>
        </form>

    </main>

    <%- include('partials/footer.ejs') %>